<div class="container">
  <div id="left">

  </div>


  <div id="register">
    <!-- action="/" method="POST" -->
    <form action="/register" method="post">
      <h2>Enter User Info</h2>

      <input type="text" id="reg_fn" name="firstName" pattern="[a-zA-Z\s]{0,30}" placeholder="First Name" title="Alphabet Characters Only"
        required>
      <br>
      <input type="text" id="reg_ln" name="lastName" pattern="[a-zA-Z\s]{0,30}" placeholder="Last Name" title="Alphabet Characters Only"
        required>
      <br>
      <input type="text" id="reg_username" name="username" pattern="[a-zA-Z0-9\s]{0,30}" placeholder="Username" title="Alphanumeric Characters Only"
        required>
      <br>
      <input type="password" id="reg_password" name="password" placeholder="Password" title="Alphabet Characters Only" required>
      <br>
      <input type="password" id="reg_password" placeholder="Confirm Password" required>
      <button type="submit" id="submit-cre">Create</button>
    </form>
  </div>

  <!-- end row for registration div -->
  <div id="welcome-signup">
    <span>Welcome :)</span>
  </div>
  <div id="right">



  </div>
  <!-- end of container-->
</div>