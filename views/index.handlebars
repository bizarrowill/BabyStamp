<h1>Babies!</h1>

<h2>Babies that are not sleepy!</h2>

<ul>
  {{#each naps}}
    {{#unless sleepy}}
      {{> naps/nap-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Babies that are sleepy!</h2>

<ul>
  {{#each Nap}}
    {{#if sleepy}}
      {{> naps/nap-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Nap</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Nap Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Nap</button>
</form>
